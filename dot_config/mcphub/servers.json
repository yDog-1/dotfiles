{
  "mcpServers": {
    "git": {
      "command": "uv",
      "args": [
        "tool",
        "run",
        "mcp-server-git"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "WXT": {
      "command": "npx",
      "args": [
        "-y",
        "sitemcp",
        "https://wxt.dev/",
        "-m",
        "/guide/**"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@executeautomation/playwright-mcp-server"
      ]
    },
    "ESLint": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@eslint/mcp@latest"
      ]
    }
  }
}
